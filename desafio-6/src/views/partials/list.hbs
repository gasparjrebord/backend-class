<h2>Lista de productos</h2>

{{#if products}}
    <div class="productList">
        <table>
        <caption>Lista total de productos</caption>
        <thead>
            <tr>
                <th>#ID</th>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Imagen</th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
                <tr>
                    <td>{{this.id}}</td>
                    <td>{{this.title}}</td>
                    <td>{{this.price}}</td>
                    <td><img src="{{this.thumbnail}}" alt="{{this.thumbnail}}"></td>
                </tr>
            {{/each}}
        </tbody>
        </table>
    </div>
{{else}}
<h2>No hay productos en la lista</h2>
{{/if}}
