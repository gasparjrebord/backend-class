<h2>Agregar Producto</h2>

<div>
    <form action="/api/products" method="POST"> 
    
        <div>
            <div>
                <span>Título</span>
                <input type="text" name="title" required class="form-control" placeholder="Título del producto">
            </div>
        </div>

        <div>
            <div>
                <span>Precio</span>
                <input type="text" name="price" required class="form-control" placeholder="Precio unitario">
            </div>
        </div>

        <div>
            <div>
                <span>Thumbnail</span>
                <input type="text" name="thumbnail" required class="form-control" placeholder="Thumbnail (URL)" >
            </div>
        </div>

        <div>
            <div>
                <button type="submit">Agregar a la lista</button>
            </div>
        </div>

    </form>
</div>

